<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/ThemeDark")
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container body-content" style="min-height:1000px">
        @RenderBody()   

    </div>
    @if (ViewContext.RouteData.Values["controller"].ToString() != "Manga" || (ViewContext.RouteData.Values["controller"].ToString() == "Manga" && ViewContext.RouteData.Values["action"].ToString() == "Detail"))
    {
        <hr>
    }
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">&copy; @DateTime.Now.Year - Animeland </p>
        </div>
        <!-- /.container -->
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
