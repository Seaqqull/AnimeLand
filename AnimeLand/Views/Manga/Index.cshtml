@*model PagedList.IPagedList<AnimeLand.Models.Books> For NuGet linker*@
@*using PagedList.Mvc; For NuGet linker*@
@model AnimeLand.ViewModels.BookListModel

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@*
    
*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-4">Книги</h2>

@foreach (var item in Model.Books)
{
    <div class="row">
        <div class="col-md-7">
            <a href="#">
                <img class="img-fluid rounded mb-3 mb-md-0" src="@item.ImagePath.Substring(1)" alt="">
            </a>
        </div>
        <div class="col-md-5">
            <h3>@item.TitleEng</h3>
            <p>@item.Discription.Substring(0, 200)</p>
            @Html.ActionLink("View", "Detail", "Manga", new { id = item.Id }, new {@class = "btn btn-primary" })
        </div>
    </div>
    <hr>
}

<ul class="pagination justify-content-center">
    @foreach (var item in Model.Links)
    {
        if (item.Key == Model.CurrentPage)
        {
            <li class="page-item active">
                @Html.ActionLink(item.Value, "Index", "Manga", new { area = "", page = item.Key }, new { @class = "page-link" })
            </li>
        }
        else
        {
            <li class="page-item">
                @Html.ActionLink(item.Value, "Index", "Manga", new { area = "", page = item.Key }, new { @class = "page-link" })
            </li>
        }

        }
</ul>
@*Html.PagedListPager(Model, page => Url.Action("Index", new { page })) For NuGet linker*@ 

